CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq807x=y
CONFIG_TARGET_qualcommax_ipq807x_DEVICE_aliyun_ap8220=y
CONFIG_TARGET_BOARD="qualcommax"
CONFIG_TARGET_SUBTARGET="ipq807x"
CONFIG_TARGET_PROFILE="DEVICE_aliyun_ap8220"
CONFIG_TARGET_ARCH_PACKAGES="aarch64_cortex-a53"
CONFIG_DEFAULT_TARGET_OPTIMIZATION="-Os -pipe -mcpu=cortex-a53"
CONFIG_CPU_TYPE="cortex-a53"
CONFIG_LINUX_6_12=y
CONFIG_ARCH_64BIT=y
CONFIG_aarch64=y
CONFIG_ARCH="aarch64"

# 主机名称
CONFIG_DEFAULT_HOSTNAME="AP8220"

# wireguard软件包
CONFIG_PACKAGE_kmod-wireguard=y
CONFIG_PACKAGE_wireguard-tools=y
CONFIG_PACKAGE_luci-proto-wireguard=y

# web管理后台
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-light=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-package-manager=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-mod-network=y
CONFIG_PACKAGE_luci-proto-ipv6=y
CONFIG_PACKAGE_luci-proto-ppp=y
CONFIG_PACKAGE_rpcd-mod-iwinfo=y
CONFIG_PACKAGE_rpcd-mod-rrdns=y
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_uhttpd-mod-ubus=y

# 中文简体语言包
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y
CONFIG_PACKAGE_luci-i18n-passwall-zh-cn=y

# 系统主题
CONFIG_PACKAGE_luci-theme-bootstrap=y
# CONFIG_PACKAGE_luci-theme-material=y

# 全功能的 WiFi 认证与管理工具包
CONFIG_PACKAGE_wpad=y
CONFIG_PACKAGE_hostapd=y
CONFIG_PACKAGE_wpad=m
CONFIG_PACKAGE_wpad-full-mbedtls=y  # 支持漫游的完整版组件

# 广告屏蔽软件包
CONFIG_PACKAGE_adblock=y
CONFIG_PACKAGE_luci-app-adblock=y
CONFIG_PACKAGE_luci-i18n-adblock-zh-cn=y

# OpenWrt 固件的早期初始化网络参数
CONFIG_TARGET_PREINIT_IP="10.0.0.1"
CONFIG_TARGET_PREINIT_NETMASK="255.255.255.0"
CONFIG_TARGET_PREINIT_BROADCAST="10.0.0.255"

# SmartDNS服务插件，提供智能DNS解析服务，根据预定义的规则和用户的地理位置自动选择最佳的DNS服务器进行查询。
CONFIG_PACKAGE_luci-app-smartdns=y

# LuCI应用商店插件，提供OpenWrt插件的安装和管理，方便用户扩展路由器功能。
# CONFIG_PACKAGE_luci-app-store=y

# 网盘聚合工具，支持多种云存储服务，提供统一的Web界面进行文件管理，支持WebDAV协议。
CONFIG_PACKAGE_luci-app-alist=y

# 晶晨宝盒
# CONFIG_PACKAGE_luci-app-amlogic=y


#
# NSS 硬件加速支持（关键！）
#
CONFIG_PACKAGE_kmod-qca-nss-dp=y               # NSS 数据平面驱动（必须）
CONFIG_PACKAGE_kmod-qca-nss-ecm-standard=y     # ECM 标准加速模块（用于 NAT/路由加速）
CONFIG_PACKAGE_kmod-qca-nss-gmac=y             # GMAC 驱动（千兆/2.5G 网口硬件卸载）
CONFIG_PACKAGE_kmod-qca-nss-cfi-crypto=y       # NSS 加密加速（可选，提升 IPsec 性能）
CONFIG_PACKAGE_nss-userspace=y                 # 用户态 NSS 工具（调试/状态查看）
CONFIG_PACKAGE_luci-app-turboacc=y             # Turbo ACC 图形界面（一键启用 NSS/Shortcut-FE）
CONFIG_PACKAGE_kmod-shortcut-fe=y              # Shortcut-FE 软件流加速（与 NSS 互补）
CONFIG_PACKAGE_kmod-shortcut-fe-drv=y          # Shortcut-FE 驱动模块

#
# 网络功能与实用插件
#
CONFIG_PACKAGE_luci-app-ddns=y                 # 动态 DNS 图形化配置
CONFIG_PACKAGE_ddns-scripts=y                  # DDNS 核心脚本
CONFIG_PACKAGE_ddns-scripts_services=y         # 额外 DDNS 服务商支持（如阿里云、Cloudflare）
CONFIG_PACKAGE_luci-app-sqm=y                  # SQM 智能队列管理（解决 Bufferbloat）
CONFIG_PACKAGE_sqm-scripts=y                   # SQM 脚本支持
CONFIG_PACKAGE_luci-app-mwan3=y                # 多 WAN 负载均衡（利用双 2.5G 网口）
CONFIG_PACKAGE_luci-app-mwan3helper=y          # MWAN3 辅助配置工具
CONFIG_PACKAGE_luci-app-commands=y             # 自定义命令执行
CONFIG_PACKAGE_luci-app-attendedsysupgrade=y   # 在线固件升级助手

#
# 远程管理工具
#
#CONFIG_PACKAGE_luci-app-ttyd=y                 # Web 终端远程管理（命令行访问）
#CONFIG_PACKAGE_luci-app-rpcd-mod-https=y       # 安全远程 API 访问（HTTPS 支持）

#
# 内核特性（通常自动启用）
#
CONFIG_KERNEL_NET_FLOW_LIMIT=y                 # 启用网络流控支持（NSS 依赖）
CONFIG_KERNEL_NETFILTER_XT_MATCH_PHYSDEV=y     # 支持物理设备匹配（用于复杂防火墙规则）

#
# 禁用不必要组件（节省空间）
#
CONFIG_PACKAGE_odhcpd-ipv6only=n               # 禁用仅 IPv6 的 DHCP 服务
CONFIG_PACKAGE_ppp=n                           # 禁用 PPP 拨号（AP8220 通常直连光猫）
CONFIG_PACKAGE_firewall4=y                     # 使用 nftables 防火墙（23.05+ 默认）
CONFIG_PACKAGE_fail2ban=n
CONFIG_PACKAGE_flent=n
CONFIG_PACKAGE_python-babel=n
CONFIG_PACKAGE_python-docker=n
CONFIG_PACKAGE_python-incremental=n


#
# 科学上网核心组件
#
CONFIG_PACKAGE_luci-app-passwall=y             # PassWall 图形化界面（推荐）
CONFIG_PACKAGE_luci-app-openclash=y            # OpenClash 图形化界面（Clash 内核）
CONFIG_PACKAGE_luci-app-vssr=y                 # VSSR 图形化界面（SSR Plus+）

#
# 协议支持库（根据需求选择）
CONFIG_PACKAGE_naiveproxy=y                    # NaiveProxy 客户端（基于 Chrome 网络栈）
CONFIG_PACKAGE_simple-obfs=y                   # Simple-OBFS 混淆工具
CONFIG_PACKAGE_v2ray-plugin=y                  # V2Ray 插件（支持 WebSocket/TLS）
CONFIG_PACKAGE_trojan=y                        # Trojan 客户端
CONFIG_PACKAGE_trojan-go=y                     # Trojan-Go 客户端（增强版）
CONFIG_PACKAGE_xray=y                          # Xray 客户端（V2Ray 分支）
CONFIG_PACKAGE_shadowsocks-rust-sslocal=y      # Shadowsocks-Rust 客户端
CONFIG_PACKAGE_shadowsocksr-libev-ssr-redir=y  # SSR 服务端工具

#
# 依赖库（自动解决依赖，建议显式声明）
CONFIG_PACKAGE_libcap=y                        # POSIX 权限控制库
CONFIG_PACKAGE_libmbedtls=y                    # 加密库（TLS 支持）
CONFIG_PACKAGE_c-ares=y                        # 异步 DNS 解析库
CONFIG_PACKAGE_libev=y                         # 事件驱动库（SSR 依赖）

#
# 增强功能（可选）
CONFIG_PACKAGE_brook=y                         # Brook 代理工具（抗封锁）
CONFIG_PACKAGE_hysteria=y                      # Hysteria 客户端（弱网优化）
CONFIG_PACKAGE_ehproxy=y                       # EHProxy 服务端（多协议支持）
CONFIG_PACKAGE_geoip-datadir=y                 # GeoIP 数据库（用于分流）
CONFIG_PACKAGE_dae=y                           # DAE 高性能代理框架（实验性）

#
# 防火墙与路由优化（科学上网必备）
CONFIG_PACKAGE_ipt2socks=y                     # iptables 转 Socks5 工具
CONFIG_PACKAGE_ip6tables-extra=y               # IPv6 防火墙扩展
CONFIG_PACKAGE_kmod-ipt-nat=y                  # NAT 内核模块（流量重定向）
